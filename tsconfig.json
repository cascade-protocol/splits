{
  "compilerOptions": {
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["ES2020"],
    "module": "ES2020",
    "moduleResolution": "bundler",
    "target": "ES2020",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["tests/**/*"],
  "exclude": ["node_modules", "sdk"]
}
