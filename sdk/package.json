{
  "name": "@cascade-labs/splits",
  "version": "0.2.0",
  "type": "module",
  "description": "TypeScript SDK for Cascade Splits payment splitting protocol",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**",
    "README.md",
    "idl.json",
    "types.ts"
  ],
  "scripts": {
    "build": "tsdown",
    "prepublishOnly": "pnpm build",
    "dev": "tsdown --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "solana",
    "payments",
    "splitting",
    "payment-splitter",
    "x402",
    "cascade-splits",
    "defi",
    "web3",
    "anchor",
    "spl-token"
  ],
  "author": "Cascade Labs <hello@cascade-protocol.xyz>",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cascade-protocol/splits"
  },
  "bugs": {
    "url": "https://github.com/cascade-protocol/splits/issues"
  },
  "homepage": "https://github.com/cascade-protocol/splits#readme",
  "peerDependencies": {
    "@coral-xyz/anchor": "^0.32.1",
    "@solana/kit": "^5.0.0",
    "@solana/web3.js": "^1.98.0"
  },
  "peerDependenciesMeta": {
    "@coral-xyz/anchor": { "optional": true },
    "@solana/kit": { "optional": true },
    "@solana/web3.js": { "optional": true }
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.32.1",
    "@solana-program/token": "^0.8.0",
    "@solana/codecs": "^5.0.0",
    "@solana/compat": "^5.0.0",
    "@solana/kit": "^5.0.0",
    "@solana/web3.js": "^1.98.0"
  },
  "devDependencies": {
    "@solana/spl-token": "^0.4.14",
    "@types/node": "^20.0.0",
    "litesvm": "^0.3.3",
    "ts-node": "^10.9.0",
    "tsdown": "^0.16.1",
    "typescript": "^5.7.3",
    "vitest": "^4.0.10"
  },
  "packageManager": "pnpm@10.20.0"
}
