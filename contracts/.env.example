# Cascade Splits EVM - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# Required for Deployment
# =============================================================================

# Private key for deploying contracts (without 0x prefix)
# WARNING: Never commit this file with real values!
PRIVATE_KEY=your_private_key_here

# Fee wallet address - receives 1% protocol fee
FEE_WALLET=0x...

# =============================================================================
# RPC Endpoints
# =============================================================================

# Base Mainnet
BASE_RPC_URL=https://mainnet.base.org

# Base Sepolia (Testnet)
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# =============================================================================
# Block Explorer API Keys (for contract verification)
# =============================================================================

# Basescan API key (get from https://basescan.org/myapikey)
BASESCAN_API_KEY=your_basescan_api_key

# =============================================================================
# Optional: Local Development
# =============================================================================

# Anvil local node (default)
LOCALHOST_RPC_URL=http://127.0.0.1:8545
