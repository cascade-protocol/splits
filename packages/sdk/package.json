{
	"name": "@cascade-fyi/splits-sdk",
	"version": "0.7.1",
	"type": "module",
	"description": "TypeScript SDK for Cascade Splits payment splitting protocol",
	"scripts": {
		"generate": "cp ../../target/idl/cascade_splits.json ./idl.json && tsx scripts/generate-clients.ts",
		"build": "tsdown",
		"prepublishOnly": "pnpm build",
		"dev": "tsdown --watch",
		"type-check": "tsc --noEmit",
		"check": "pnpm type-check && biome check --write",
		"clean": "rm -rf dist",
		"test": "vitest run",
		"test:watch": "vitest"
	},
	"dependencies": {
		"@solana/compat": "^5.0.0",
		"bs58": "^6.0.0"
	},
	"devDependencies": {
		"@codama/nodes-from-anchor": "^1.3.4",
		"@codama/renderers-js": "^1.5.1",
		"@codama/visitors": "^1.4.2",
		"@solana/kit": "^5.0.0",
		"@solana/spl-token": "^0.4.14",
		"@solana/web3.js": "^1.98.4",
		"@types/node": "^24.10.1",
		"codama": "^1.4.2",
		"jsdom": "^26.0.0",
		"litesvm": "^0.4.0",
		"tsdown": "^0.16.6",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3",
		"vitest": "^4.0.12"
	},
	"peerDependencies": {
		"@solana/kit": "^5.0.0"
	},
	"peerDependenciesMeta": {
		"@solana/web3.js": {
			"optional": true
		}
	},
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.cts",
	"sideEffects": false,
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.mts",
				"default": "./dist/index.mjs"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		},
		"./solana": {
			"import": {
				"types": "./dist/solana/index.d.mts",
				"default": "./dist/solana/index.mjs"
			},
			"require": {
				"types": "./dist/solana/index.d.cts",
				"default": "./dist/solana/index.cjs"
			}
		},
		"./solana/web3-compat": {
			"import": {
				"types": "./dist/solana/web3-compat.d.mts",
				"default": "./dist/solana/web3-compat.mjs"
			},
			"require": {
				"types": "./dist/solana/web3-compat.d.cts",
				"default": "./dist/solana/web3-compat.cjs"
			}
		},
		"./solana/generated": {
			"import": {
				"types": "./dist/solana/generated.d.mts",
				"default": "./dist/solana/generated.mjs"
			},
			"require": {
				"types": "./dist/solana/generated.d.cts",
				"default": "./dist/solana/generated.cjs"
			}
		},
		"./package.json": "./package.json"
	},
	"files": [
		"dist/**",
		"README.md",
		"idl.json"
	],
	"keywords": [
		"solana",
		"payments",
		"splitting",
		"payment-splitter",
		"x402",
		"cascade-splits",
		"defi",
		"web3",
		"spl-token"
	],
	"author": "Cascade <hello@cascade.fyi>",
	"license": "Apache-2.0",
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/cascade-protocol/splits"
	},
	"bugs": {
		"url": "https://github.com/cascade-protocol/splits/issues"
	},
	"homepage": "https://github.com/cascade-protocol/splits#readme"
}
