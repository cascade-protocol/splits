{
	"name": "@cascade-fyi/splits-sdk",
	"version": "0.5.1",
	"type": "module",
	"description": "TypeScript SDK for Cascade Splits payment splitting protocol",
	"scripts": {
		"build": "tsdown",
		"prepublishOnly": "pnpm build",
		"dev": "tsdown --watch",
		"type-check": "tsc --noEmit",
		"check": "pnpm type-check && biome check --write",
		"clean": "rm -rf dist",
		"test": "vitest run",
		"test:watch": "vitest"
	},
	"dependencies": {
		"bs58": "^6.0.0",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@coral-xyz/anchor": "^0.32.1",
		"@solana-program/token": "^0.8.0",
		"@solana/codecs": "^5.0.0",
		"@solana/compat": "^5.0.0",
		"@solana/kit": "^5.0.0",
		"@solana/wallet-adapter-react": "^0.15.36",
		"@solana/web3.js": "^1.98.4",
		"@tanstack/react-query": "^5.62.16",
		"@types/node": "^24.10.1",
		"@types/react": "^19.0.0",
		"litesvm": "^0.3.3",
		"react": "^19.0.0",
		"ts-node": "^10.9.2",
		"tsdown": "^0.16.6",
		"typescript": "^5.9.3",
		"vitest": "^4.0.12"
	},
	"peerDependencies": {
		"@coral-xyz/anchor": "^0.32.1",
		"@solana/kit": "^5.0.0",
		"@solana/wallet-adapter-react": ">=0.15.0",
		"@solana/web3.js": "^1.98.0",
		"@tanstack/react-query": ">=5.0.0",
		"react": ">=18.0.0"
	},
	"peerDependenciesMeta": {
		"@coral-xyz/anchor": {
			"optional": true
		},
		"@solana/kit": {
			"optional": true
		},
		"@solana/wallet-adapter-react": {
			"optional": true
		},
		"@solana/web3.js": {
			"optional": true
		},
		"@tanstack/react-query": {
			"optional": true
		},
		"react": {
			"optional": true
		}
	},
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.cts",
	"sideEffects": false,
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.mts",
				"default": "./dist/index.mjs"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		},
		"./web3": {
			"import": {
				"types": "./dist/index.d.mts",
				"default": "./dist/index.mjs"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		},
		"./kit": {
			"import": {
				"types": "./dist/kit.d.mts",
				"default": "./dist/kit.mjs"
			},
			"require": {
				"types": "./dist/kit.d.cts",
				"default": "./dist/kit.cjs"
			}
		},
		"./schemas": {
			"import": {
				"types": "./dist/index.d.mts",
				"default": "./dist/index.mjs"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		},
		"./schemas/mini": {
			"import": {
				"types": "./dist/index.d.mts",
				"default": "./dist/index.mjs"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		},
		"./react": {
			"import": {
				"types": "./dist/react.d.mts",
				"default": "./dist/react.mjs"
			},
			"require": {
				"types": "./dist/react.d.cts",
				"default": "./dist/react.cjs"
			}
		},
		"./package.json": "./package.json"
	},
	"files": [
		"dist/**",
		"README.md",
		"idl.json"
	],
	"keywords": [
		"solana",
		"payments",
		"splitting",
		"payment-splitter",
		"x402",
		"cascade-splits",
		"defi",
		"web3",
		"anchor",
		"spl-token"
	],
	"author": "Cascade <hello@cascade.fyi>",
	"license": "Apache-2.0",
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/cascade-protocol/splits"
	},
	"bugs": {
		"url": "https://github.com/cascade-protocol/splits/issues"
	},
	"homepage": "https://github.com/cascade-protocol/splits#readme"
}
