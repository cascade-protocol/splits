{
	"name": "@cascade-fyi/splits-sdk-evm",
	"version": "0.1.1",
	"type": "module",
	"description": "TypeScript SDK for Cascade Splits on EVM chains (Base)",
	"scripts": {
		"build": "tsdown",
		"prepublishOnly": "pnpm build",
		"dev": "tsdown --watch",
		"type-check": "tsc --noEmit",
		"check": "pnpm type-check && biome check --write",
		"clean": "rm -rf dist",
		"test": "vitest run",
		"test:watch": "vitest"
	},
	"dependencies": {
		"viem": "^2.41.2"
	},
	"devDependencies": {
		"tsdown": "^0.16.6",
		"typescript": "^5.9.3",
		"vitest": "^4.0.12"
	},
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.cts",
	"sideEffects": false,
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.mts",
				"default": "./dist/index.mjs"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		},
		"./client": {
			"import": {
				"types": "./dist/client/index.d.mts",
				"default": "./dist/client/index.mjs"
			},
			"require": {
				"types": "./dist/client/index.d.cts",
				"default": "./dist/client/index.cjs"
			}
		},
		"./package.json": "./package.json"
	},
	"files": [
		"dist/**",
		"README.md"
	],
	"keywords": [
		"ethereum",
		"evm",
		"base",
		"payments",
		"splitting",
		"payment-splitter",
		"cascade-splits",
		"defi",
		"web3",
		"viem"
	],
	"author": "Cascade <hello@cascade.fyi>",
	"license": "Apache-2.0",
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/cascade-protocol/splits"
	},
	"bugs": {
		"url": "https://github.com/cascade-protocol/splits/issues"
	},
	"homepage": "https://github.com/cascade-protocol/splits#readme"
}
