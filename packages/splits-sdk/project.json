{
	"name": "@cascade-fyi/splits-sdk",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "packages/splits-sdk/src",
	"projectType": "library",
	"tags": ["type:sdk", "platform:solana", "scope:packages"],
	"targets": {
		"build": {
			"inputs": ["production", "^production"],
			"outputs": ["{projectRoot}/dist"]
		},
		"test": {
			"inputs": ["default", "^production"],
			"outputs": ["{workspaceRoot}/coverage/{projectRoot}"]
		},
		"type-check": {
			"inputs": ["default", "^production"]
		},
		"generate": {
			"dependsOn": ["^build"],
			"inputs": [
				"{workspaceRoot}/target/idl/cascade_splits.json",
				"{projectRoot}/scripts/generate-clients.ts"
			],
			"outputs": [
				"{projectRoot}/idl.json",
				"{projectRoot}/src/solana/generated"
			],
			"cache": true
		}
	},
	"release": {
		"version": {
			"generator": "@nx/js:release-version"
		}
	}
}
