{
  "name": "@cascade-fyi/cli",
  "version": "0.0.1",
  "description": "Cascade CLI for managing paid MCP services",
  "type": "module",
  "bin": {
    "cascade": "./dist/cascade"
  },
  "scripts": {
    "dev": "bun run src/bin/cli.ts",
    "build": "bun build --compile --minify --sourcemap --no-compile-autoload-dotenv src/bin/cli.ts --outfile dist/cascade",
    "build:cross": "bun run build:darwin-arm64 && bun run build:darwin-x64 && bun run build:linux-x64 && bun run build:windows",
    "build:darwin-arm64": "bun build --compile --minify --sourcemap --no-compile-autoload-dotenv --target=bun-darwin-arm64 src/bin/cli.ts --outfile dist/cascade-darwin-arm64",
    "build:darwin-x64": "bun build --compile --minify --sourcemap --no-compile-autoload-dotenv --target=bun-darwin-x64 src/bin/cli.ts --outfile dist/cascade-darwin-x64",
    "build:linux-x64": "bun build --compile --minify --sourcemap --no-compile-autoload-dotenv --target=bun-linux-x64 src/bin/cli.ts --outfile dist/cascade-linux-x64",
    "build:windows": "bun build --compile --minify --sourcemap --no-compile-autoload-dotenv --target=bun-windows-x64 src/bin/cli.ts --outfile dist/cascade-windows.exe",
    "type-check": "tsc --noEmit",
    "lint": "biome check --write",
    "check": "pnpm type-check && pnpm lint",
    "test": "bun test"
  },
  "dependencies": {
    "@cascade-fyi/tabs-sdk": "workspace:*",
    "@clack/prompts": "^0.11.0",
    "@solana/kit": "^5.0.0",
    "@stricli/core": "^1.2.4",
    "@x402/core": "^2.0.0",
    "jose": "^6.1.3",
    "open": "^11.0.0",
    "picocolors": "^1.1.1",
    "pkce-challenge": "^5.0.1",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "@types/bun": "^1.3.4",
    "@types/ws": "^8.18.1",
    "typescript": "^5.9.3"
  },
  "files": [
    "dist/**",
    "README.md"
  ]
}
